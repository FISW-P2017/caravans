<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:id="@+id/tv_type_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de carro:"/>
    <Spinner
        android:layout_margin="10dp"
        android:id="@+id/sp_type_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"/>
    <EditText
        android:id="@+id/name"
        android:hint="Escribe el nombre del carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:id="@+id/tv_matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matrícula"/>
    <EditText
        android:id="@+id/enrollment"
        android:hint="Escriba su matrícula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelo:"/>
    <EditText
        android:id="@+id/model"
        android:hint="Escribe el modelo del carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Año:"/>
    <EditText
        android:id="@+id/year"
        android:hint="Escribe el año del carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color:"/>
    <Spinner
        android:id="@+id/color"
        android:hint="Escoge un color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>